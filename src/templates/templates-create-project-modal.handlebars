<div class="modal hide" id="create-project-modal">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">Ã—</button>
    <h3>Create project</h3>
  </div>
  <div class="modal-body">
    <form id="create-project-form" class="form-horizontal">
      <fieldset>
        <div class="control-group">
          <label class="control-label" for="input-project-template">Template</label>
          <div class="controls">
            <span class="template">{{{template_td}}}</span>
          </div>
        </div>
        <div class="control-group">
          <label class="control-label" for="input-project-name">Name</label>
          <div class="controls">
            <input type="text" class="input-xlarge" id="input-project-name"
                   value="{{db_name}}">
          </div>
        </div>
      </fieldset>
    </form>
    <div class="progress">
      <div class="bar"></div>
    </div>
  </div>
  <div class="modal-footer">
    <a href="#" class="btn" data-dismiss="modal">Close</a>
    <a href="#" class="btn btn-primary">Create</a>
  </div>
</div>
